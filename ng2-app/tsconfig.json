{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "declaration": true,
        "lib": [
            "es6",
            "dom"
        ],
        "outDir": "tmp"
    },
    "exclude": [
        "node_modules"
    ]
}